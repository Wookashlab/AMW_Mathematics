                                <ColumnDefinition Width="135*"/>
                                <ColumnDefinition Width="739*"/>
                            </Grid.ColumnDefinitions>
                            <ListBox x:Name="ResultList" Margin="10,40,10,160" FontSize="22" Grid.ColumnSpan="2">
                            </ListBox>
                            <GroupBox x:Name="groupBox5" Header="" Margin="10,418,18,0" VerticalAlignment="Top" Height="139" Grid.ColumnSpan="2">
                                <Grid FocusManager.FocusedElement="{Binding ElementName=ExpressionField}">
                                    <TextBox x:Name="ExpressionField" Height="65" Margin="10,0,90,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" TabIndex="0"/>
                                    <TextBox x:Name="TipBox" Height="29" Margin="10,70,10,0" TextWrapping="Wrap" Text="Type an expression and then click Enter." VerticalAlignment="Top"/>
                                    <Button x:Name="Clear" Content="Clear" HorizontalAlignment="Right" Margin="0,5,10,0" VerticalAlignment="Top" Width="75" Click="Clear_Click"/>
                                    <Button x:Name="ConfirmExpresion" Content="Enter" HorizontalAlignment="Right" Margin="0,35,10,0" VerticalAlignment="Top" Width="75" Click="ConfirmExpresion_Click" IsDefault="True"/>
                                </Grid>
                            </GroupBox>
                            <Button x:Name="Edit" Content="Edit" HorizontalAlignment="Right" Margin="0,10,93,0" VerticalAlignment="Top" Width="75" Click="Edit_Click" RenderTransformOrigin="0.24,2.48" Grid.Column="1"/>
                            <Button x:Name="Delete" Content="Remove" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="75" Click="Delete_Click" Grid.Column="1"/>
                        </Grid>
                    </TabControl>
                </TabItem>
                <TabItem x:Name="ChartsOverLap" Header="Graphing" Height="39" VerticalAlignment="Top" >
