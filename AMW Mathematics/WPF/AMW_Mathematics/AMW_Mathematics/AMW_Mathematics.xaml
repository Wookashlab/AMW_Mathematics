                            </Grid>
                        </GroupBox>
                        <GroupBox x:Name="groupBox8" Header="Axis range" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="166,5,0,0" Width="223" Height="120">
                            <Grid>
                                <TextBlock Margin="26,0,149,63" Text="X-axis" FontSize="14"></TextBlock>
                                <TextBlock Margin="0,26,168,38" FontSize="14" RenderTransformOrigin="0.654,0.65"><Run Text="from"/><Run Text=":"/></TextBlock>
                                <TextBlock Text="to:" Margin="0,57,168,3" FontSize="14"></TextBlock>
                                <TextBox x:Name="MinX" Margin="48,23,111,32"></TextBox>
                                <TextBox x:Name="MaxX" Margin="48,54,111,-2"></TextBox>
                                <Rectangle Fill="#FFF4F4F5" Height="82" Margin="105,-1,105,0" Stroke="Black" VerticalAlignment="Top"/>
                                <TextBlock Text ="Y-axis" Margin="141,0,34,61" FontSize="14" Height="20" VerticalAlignment="Bottom"></TextBlock>
                                <TextBlock Text="form:" Margin="111,26,68,38" FontSize="14" RenderTransformOrigin="0.625,-0.059"></TextBlock>
                                <TextBlock Text="to:" Margin="111,57,68,3" FontSize="14"></TextBlock>
                                <TextBox x:Name="MinY" Margin="159,23,0,32"></TextBox>
                                <TextBox x:Name="MaxY" Margin="159,54,0,-2"/>
                            </Grid>
                        </GroupBox>
                        <Button x:Name="AcceptXY" Content="Confirm" HorizontalAlignment="Left" Margin="312,7,0,0" VerticalAlignment="Top" Width="68" Height="10" Click="AcceptXY_Click"/>
                    </Grid>
                </TabItem>
            </TabControl>
            <TabControl x:Name="Worksheetadn" HorizontalAlignment="Left" Height="628" Margin="322,188,0,0" VerticalAlignment="Top" Width="879" SelectionChanged="TabControl_SelectionChanged" >
