                                    <ComboBoxItem Content="1x"></ComboBoxItem>
                                    <ComboBoxItem Content="2x"></ComboBoxItem>
                                    <ComboBoxItem Content="3x"></ComboBoxItem>
                                    <ComboBoxItem Content="4x"></ComboBoxItem>
                                </ComboBox>
                            </Grid>
                        </GroupBox>
                        <GroupBox x:Name="groupBox7" Header="Positioning" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="394,5,0,0" Width="180">
                            <Grid>
                                <Button x:Name="ChartLineTopPosition" Content="Up"  Margin="58,0,0,56" HorizontalAlignment="Left" Width="50" RenderTransformOrigin="0.878,0.92" Click="ChartLineTopPosition_Click"/>
                                <Button x:Name="ChartLineDownPosition" Content="Down" Margin="58,56,0,0" HorizontalAlignment="Left" Width="50" Click="ChartLineDownPosition_Click"  />
