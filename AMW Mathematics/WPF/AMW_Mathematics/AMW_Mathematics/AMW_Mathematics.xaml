                                            <ComboBoxItem Content="Cartesian"/>
                                            <ComboBoxItem Content="Polar"/>
                                        </ComboBox>
                                        <ListView x:Name="PointChartListFunction" Margin="15,62,10,0" Height="329" VerticalAlignment="Top">
